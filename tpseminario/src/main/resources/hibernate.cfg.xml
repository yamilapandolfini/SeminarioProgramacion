<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 <hibernate-configuration>
   <session-factory>
     <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
     <property name="connection.url">jdbc:mysql://127.0.0.1/grupotp</property>
     <property name="connection.username">grupotp</property>
     <property name="connection.password">grupotp</property>
     <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
     <property name="hibernate.current_session_context_class">thread</property>
     <property name="hibernate.show_sql">true</property>

     <mapping class="com.equipo.model.Aseguradora"/>
     <mapping class="com.equipo.model.Mecanico"/>
	 <mapping class="com.equipo.model.Insumo"/>
	 <mapping class="com.equipo.model.Trabajo"/>
	 <mapping class="com.equipo.model.Servicio"/>
	 <mapping class="com.equipo.model.Turno" />
   	 <mapping class="com.equipo.model.Cliente" />
   	 <mapping class="com.equipo.model.Vehiculo" />

   </session-factory>
 </hibernate-configuration>